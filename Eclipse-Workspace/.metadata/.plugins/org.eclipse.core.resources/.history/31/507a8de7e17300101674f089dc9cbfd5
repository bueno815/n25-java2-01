package br.com.senaisp.bauru.secao04.aula08;

public class Calculadora {
	//propriedades - campos
	private double imposto;
	private double comissao;
	//Constructor
	public Calculadora() {
		imposto = 5;
		comissao = 15;
		
	}
	//comportamentos - getters e stters
	public double getImposto() {
		return imposto;
	}
	public void setImposto(double imposto) {
		this.imposto = imposto;
	}
	public double getComissao() {
		return comissao;
	}
	public void setComissao(double comissao) {
		this.comissao = comissao;
	}
	public double calcularTotal (String nome, double valorGasto) {
		double ret = Math.round(valorGasto) * (1 + getImposto() / 100 + getComissao() /100);
		System.out.println(nome + ": $" + ret);
		return ret;
	}

}
