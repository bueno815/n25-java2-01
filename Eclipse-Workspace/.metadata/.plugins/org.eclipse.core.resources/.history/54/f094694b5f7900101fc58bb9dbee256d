package br.com.senaisp.bauru.secao06.aula12;

import java.util.Random;

public class TicTacToe {
	private char[]tab; //tabuleiro
	private String nomePlayer;
	private byte[] posDiso;
	private Random rnd;
	//Constructor
	public TicTacToe() {
		tab = new char[9]; //criando o vetor de 9 posi√ßoes
		rnd = new Random();
		
	}
	public String getNomePlayer() {
		return nomePlayer;
	}
	public void setNomePlayer(String nomePlayer) {
		this.nomePlayer = nomePlayer;
		
	}
	public void iniciarTbuleiro() {
		for (int i=0; i<9; i++){
			tab[i] = '_';
		}
		tab[4] = 'X';
	}

}
