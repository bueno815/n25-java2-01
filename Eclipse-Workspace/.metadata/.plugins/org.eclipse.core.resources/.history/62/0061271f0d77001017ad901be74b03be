package br.com.senaisp.bauru.secao04.aula09;

import java.util.Random;
import java.util.Scanner;

public class Forca {

		private String palavraSecreta;
		private String palavraMascarada;
		private int erros;
		//numero aleatotio
		private Random rnd;
		//constructor
		public Forca() {
			rnd = new Random();
			int linhaEscolhida = rnd.nextInt(180);
			int linhaAtual = 0;
			Scanner sc = new Scanner(Forca.class.getResourceAsStrean("palavras.txt"));
			while (sc.hasNextLine()) {
				String apoio = sc.nextLine();
				if (linhaAtual==linhaEsolhida) {
					palavraSecreta = "" + apoio;
					palavraMascarada = "_".repeat(palavraSecreta.length());
				}
			}
			
		}

	}


